@page
@model Restaurant.Pages.Food.CategoriesModel
@{
}
<h1>Categories</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" value="" placeholder="Search by name" asp-for="SearchTerm"/>
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>
<table class="table">
    <tr>
        <th>Category Name</th>
        <th>Selling Time</th>
        <th>Action</th>
    </tr>
    @foreach (var category in Model.Categories)
    {
        <tr>
            <td>
                @category.CategoryName
            </td>
            <td>@category.SellingTime</td>
            <td>
                <a class="btn btn-primary" asp-page="./MenuItems" asp-route-categoryId="@category.Id">
                    View
                </a>
                <a class="btn btn-info" asp-page="./EditCategory" asp-route-categoryId="@category.Id">
                    Edit
                </a>
                <a class="btn btn-danger" asp-page="./DeleteCategory" asp-route-categoryId="@category.Id">
                    Delete
                </a>
            </td>
        </tr>
    }
</table>

<a asp-page="./EditCategory" class="btn btn-primary">Add New</a>